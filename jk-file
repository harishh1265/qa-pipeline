pipeline {
			agent any
			stages {
				stage('BUILD') {
					steps {
						git branch: 'main', url: 'https://github.com/harishh1265/java-codes.git'
						 sh 'mvn clean install'
							sleep 5
					}
				}
				stage('DEPLOY') {
					steps {
						sh 'scp -r /opt/jenkins/workspace/pipeline-job/target/hello-world-war-1.0.0.war/ ec2-user@172.31.44.2:/home/ec2-user/'	
					}
				}
				stage('STATUS') {
					steps {
						sh 'echo "Pipeline job completed"; sleep 5'	
					}
				}
			}
		}
