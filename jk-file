pipeline {
			node('slave-01')
			stages {
				stage('BUILD') {
					steps {
						sh '''
							#!/bin/bash 
                                                        git clone https://github.com/harishh1265/java-codes.git
							mvn clean install
							echo "build stage in Jenkinsfile"
							sleep 5
						'''
					}
				}
			node('slave-02')
				stage('DEPLOY') {
					steps {
						sh 'echo "Final DEPLOY stage in Jenkinsfile"; sleep 5'	
					}
				}
				stage('STATUS') {
					steps {
						sh 'echo "Pipeline job completed"; sleep 5'	
					}
				}
			}
		}
